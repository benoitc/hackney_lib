{erl_opts, [debug_info]}.
{xref_checks, [undefined_function_calls]}.

{cover_enabled, true}.
{eunit_opts, [verbose]}.

{clean_files, ["*~","*/*~","*/*.xfm","test/*.beam"]}.

{deps, [
        {mimetypes, ".*",
         {git, "git://github.com/spawngrid/mimetypes.git", "master"}},

        {idna, ".*",
         {git, "git://github.com/benoitc/erlang-idna.git",
          {tag, "hackney-0.11.2"}}}
]}.

{require_otp_vsn, "R15|R16|17"}.
